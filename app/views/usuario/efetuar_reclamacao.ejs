<!DOCTYPE html>
<html>
<head>
	<%- include('../components/head') %>
</head>

<body>
	<main> 
		<section class="container_layout">
			<%- include('../components/sidebar') %>
			<div>
				<%- include('../components/header') %>
				<div class="tela fundo">
					<div class="titulo">
						<h1>Registrar Reclamação</h1>
					</div>
					<div class="msg">
						<%if(msg.length >0){%>
							<%for(var i = 0; i <msg.length;i++){%>
								<div class="card-msg">
									<span><i class="material-icons">check_circle</i><%=msg[i].msg%></span>
								</div>
							<%}%>
						<%}%>
					</div>
					<div class="form_reclamação">
						<form action="/registrar_reclamacao" method="post"  enctype="multipart/form-data">
							<div class="container_input">
								<label>Data:</label>
								<input type="Date" name="data_de_reclamação" placeholder="">
							</div>
							<div class="container_input">
								<label>Reclamação</label>
								<textarea type='text' name='desc_reclamação' ></textarea>
							</div>
							<div class="container_input">
								<label>Assunto reclamação</label>
								<input type="text" name="tipo_reclamção" placeholder="Exemplo: Limpeza do veiculo">
							</div>
							<div class="container_input upload">
								<label for="anexo_arquivo"><i class="material-icons">attachment</i>Anexar arquivos(não é obrigatório)</label>
								<input type="file" id="anexo_arquivo" name="anexo_arquivo" multiple >
							</div>
							<div id="list"></div>
							<div class="btns_form">
								<div>
									<input type="submit" value="Salvar" >
								</div>
								<div>
									<input type="reset" value="Limpar">
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</section>
	</main>
	<script type="text/javascript" src="js/carregar_arquivo.js"></script>
	<%- include('../components/links') %>
</body>
</html>
