<!DOCTYPE html>
<html>
<head>
	<%- include('../components/head') %>
</head>

<body>
	<main> 
		<section class="container_layout">
			<%- include('../components/sidebar') %>
			<div>
				<%- include('../components/header') %>
				<div class="tela fundo">
					<div class="titulo">
						<h1>Registrar Linhas</h1>
					</div>
					<div class="msg">
						<%if(msg.length >0){%>
							<%for(var i = 0; i <msg.length;i++){%>
								<div class="card-msg">
									<span><i class="material-icons">check_circle</i><%=msg[i].msg%></span>
								</div>
							<%}%>
						<%}%>
					</div>
					<div class="form_reclamacao">
						<form action="admin/cadastrar-linha" method="post">
							<div class="container_input">
								<label>Identificação linha</label>
								<input type="text" name="nome_linha">
							</div>
							<div class="container_input">
								<label>Saida final</label>
								<input type="text" name="saida_linha">
							</div>
							<div class="container_input">
								<label>Chegada final</label>
								<input type="text" name="chegada_linha">
							</div>
							<div class="btns_form">
								<div>
									<input type="submit" value="Salvar" >
								</div>
								<div>
									<input type="reset" value="Limpar">
								</div>
							</div>
						</form>
						<div class="titulo">
							<h1>Registrar Rua - Avenida</h1>
						</div>
						<form action="admin/cadastrar-rua" method="post">
							<div class="container_input">
								<label>Nome Rua</label>
								<input type="text" name="nome_rua">
							</div>
							<div class="btns_form">
								<div>
									<input type="submit" value="Salvar" >
								</div>
								<div>
									<input type="reset" value="Limpar">
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</section>
	</main>
	<%- include('../components/links') %>
</body>
</html>
