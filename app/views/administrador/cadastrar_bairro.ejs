<!DOCTYPE html>
<html>
<head>
	<%- include('../components/head') %>
</head>

<body>
	<main> 
		<section class="container_layout">
			<%- include('../components/sidebar') %>
			<div>
				<%- include('../components/header') %>
				<div class="tela fundo">
					<div class="titulo">
						<h1>Registrar Bairros</h1>
					</div>
					<div class="msg">
						<%if(msg.length >0){%>
							<%for(var i = 0; i <msg.length;i++){%>
								<div class="card-msg">
									<span><i class="material-icons">check_circle</i><%=msg[i].msg%></span>
								</div>
							<%}%>
						<%}%>
					</div>
					<div class="form_reclamação">
						<form action="admin/cadastrar-bairro" method="post">
							<div class="container_input">
								<label>Latitude bairro</label>
								<input type="text" name="lat">
							</div>
							<div class="container_input">
								<label>Longitude bairro</label>
								<input type="text" name="lng">
							</div>
							<div class="container_input">
								<label>Nome bairro</label>
								<input type="text" name="nome_bairro">
							</div>
							<div class="container_input">
								<label>Linha</label>
								<select name="id_linha">
									<%for(var i = 0;i<linhas.length;i++){%>
										<option value="<%=linhas[i].id_linha%>"><%=linhas[i].nome_linha%></option>
									<%}%>
								</select>
							</div>
							<div class="btns_form">
								<div>
									<input type="submit" value="Salvar" >
								</div>
								<div>
									<input type="reset" value="Limpar">
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</section>
	</main>
	<%- include('../components/links') %>
</body>
</html>
